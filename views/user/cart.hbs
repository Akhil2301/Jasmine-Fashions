<script>
  window.onload = function () {
    document.getElementById("open").click();
  };

  function remove(ev, cartId, proId, userId, count) {


    ev.preventDefault();
    var urlToRedirect = ev.currentTarget.getAttribute('href'); //use currentTarget because the click may be on the nested i tag and not a tag causing the href to be empty

    swal({
      title: "Are you sure?",
      text: "Once deleted, you will not be able to recover this  data!",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {
        // redirect with javascript here as per your logic after showing the alert using the urlToRedirect value
        if (willDelete) {
          swal("Poof! Your  file has been deleted!", {
            icon: "success",

          });

          let quantity = parseInt(document.getElementById(proId).value)
          count = parseInt(count)
          $.ajax({
            url: '/remove-product',
            data: {
              user: userId,
              cart: cartId,
              product: proId,
              count: count,
              quantity: quantity
            },
            method: 'post',

            success: (response) => {

              if (response.removeProduct) {

                location.reload();

              }
            }
          })
        } else {

          swal("Your  file is safe!");

        }
      });
  }



  function applyCoupon(id) {


    //use currentTarget because the click may be on the nested i tag and not a tag causing the href to be empty



    let coupon = document.getElementById('coupon').value

    if (coupon == '' || coupon.length < 12) {
      swal({
        title: "Enter Exact Coupon Code",
        text: "",
        icon: "warning",
        //buttons: true,
        //dangerMode: true,
      })
        .then(() => {


        });
    } else {
      $.ajax({
        url: '/applycoupon',
        data: {
          userid: id,
          enteredcoupon: coupon
        },
        method: 'post',
        success: (response) => {
          if (response.status) {
            swal({
              title: "Coupon Applied",
              text: "",
              icon: "success",
              // buttons: true,
              //dangerMode: false,
            })
              .then(() => {

                location.reload()
              });
          }
          else if (response.usedStatus) {
            swal({
              title: "Already Used / No coupon Available",
              text: "",
              icon: "success",
              //buttons: true,
              //dangerMode: true,
            })
              .then(() => {

                location.reload()
              });
          }
          else {
            swal({
              title: "Coupon Not Available",
              text: "",
              icon: "warning",
              //buttons: true,
              //dangerMode: true,
            })
              .then(() => {

                location.reload()
              });



          }

        }
      })
    }
  }


  function removeCoupon(ev, id, coupid) {


    var urlToRedirect = ev.currentTarget.getAttribute('href');

    swal({
      title: "Are you sure?",
      text: "Are You Want To Remove the Coupon!...",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {

        if (willDelete) {




          $.ajax({
            url: '/removeCoupon',
            data: {
              userid: id,
              coupid: coupid
            },
            method: 'post',
            success: (response) => {

              swal("Removed Success Fully", {
                icon: "success",

              });
              location.reload();

            }
          })



        } else {

          swal("Your  file is safe!");

        }


      })

  }


  function getCoupon(id) {

    let div = document.getElementById('data_id')

    $.ajax({
      url: '/getcoupon',
      data: {
        userid: id
      },
      method: 'post',
      success: (response) => {

        const c = 1;
        div.innerHTML = ""
        for (let i = 0; i < response.length; i++) {
          div.innerHTML += ` <div class="card" style="width: 18rem;">

                          <div class="card-body">
                            <h5 class="card-title" id='coupon_name'>Coupon ${c + i} :  ${response[i].coupon}</h5>
                            <p class="card-text"> <input type="text" class="border-1 text-success" value="${response[i]._id}" id="code">
                            </p>
                            <h6 id="offper">offper ${response[i].percentage} %</h6>
                          </div>
                         `


        }

      }
    })

  }

</script>