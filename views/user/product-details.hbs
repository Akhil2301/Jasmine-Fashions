                                        {{#if product.catoffstatus}}
                                           {{product.total}}
                                        {{/if}}
                                        {{product.total}}
                                        {{else}}
                                        {{#if product.catoffstatus}}
                                           {{product.total}}
                                         {{else}}  
                                         {{product.price}}
                                        {{/if}}
                                        
                                        {{/if}}
                                        </strong> <!--<span>40% OFF</span>--> </div>
                                </div>
                            </div>
                            <p class="about">{{product.description}}</p>
