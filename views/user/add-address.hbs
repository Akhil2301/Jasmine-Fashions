<section class="d-flex pt-5 justify-content-center">
    <div class="col-lg-6 pt-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Delivery Address</h5>

                <!-- Vertical Form -->
                <form class="row g-3" action="/add-address" method="post">
                    <div class="col-12">
                        <label for="inputNanme4" class="form-label">First Name</label>
                        <input type="text" name="fname" value="{{user.fname}}" disabled class="form-control" id="fname">
                    </div>
                    <div class="col-12">
                        <label for="inputNanme4" class="form-label">Last Name</label>
                        <input type="text" name="lname"  value="{{user.lname}}" disabled class="form-control" id="lname">
                    </div>
                    <div class="col-12">
                        <label for="inputEmail4" class="form-label">Email</label>
                        <input type="email" name="email" value="{{user.email}}"disabled class="form-control" id="email">
                    </div>
                     <div class="col-12">
                        <label for="inputEmail4" class="form-label">Phone</label>
                        <input type="text" name="phone" value="{{user.phone}}" disabled class="form-control" id="address">
                    </div>
                    <div class="col-12">
                        <label for="inputEmail4" class="form-label">Address</label>
                        <input type="text" name="address" class="form-control" id="address">
                    </div>
                    <div class="col-12">
                        <label for="inputEmail4" class="form-label">City</label>
                        <input type="text" name="city" class="form-control" id="city">
                    </div>

                    <div class="col-12">
                        <label for="inputEmail4" class="form-label">zip</label>
                        <input type="text" name="zip" class="form-control" id="zip">
                    </div>

                    <div class="col-12">
                        <span><input name="saveaddress" type="radio" value="Home" checked> Home</span>
                        <span><input name="saveaddress" type="radio" value="Office"> Office</span>
                        <span><input name="saveaddress" type="radio" value="Other"> Other</span>
                        <span><input name="check" type="checkbox" value="checked"> Save As Default</span>
                        <input name="userId" type="hidden" value="{{user._id}}">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
