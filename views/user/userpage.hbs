<section class="pt-5">
    <div class="container pt-5">
        <div class="main-body pt-5">


            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                {{!-- <div class="containercrop"> --}}
                                    <div class="group">
                                        {{#if user.photo}}
                                        <img src="{{user.photo}}" alt="" class="crop-image" id="crop-image">
                                        {{else}}
                                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt=""
                                            class="crop-image" id="crop-image">
                                        {{/if}}
                                        <input type="file" name="input-file" id="input-file"
                                            accept=".png,.jpg,.jpeg,.webp">
                                        <label for="input-file" class="label-file">Change Image</label>
                                    </div>
                                    {{!--
                                </div> --}}

                                <!-- Modal para cortar imagen -->

                                <div class="modalcrop mt-5">
                                    <div class="modalcrop-content">
                                        {{!-- <form action="/crop-images" method="post"> --}}
                                            <div class="modalcrop-header">
                                                <p class="text-primary">Crop Image</p>
                                            </div>
                                            <div class="modalcrop-body">
                                                <div class="content-imagen-cropper">
                                                    <img src="" alt="" class="img-cropper" id="img-cropper">
                                                </div>
                                                <div class="content-imagen-sample">
                                                    <div src="" alt="" class="img-sample" id="img-croppered"></div>
                                                </div>
                                            </div>
                                            <div class="modalcrop-footer">
                                                <input type="hidden" value="{{user._id}}" id="userval" />
                                                <button type="submit" class="btn primary" id="cut">Crop</button>
                                                <button class="btn secundary" id="close">Cancel</button>
                                            </div>
                                            {{!--
                                        </form> --}}
                                    </div>
                                </div>


                                <div class="mt-3">
                                    <h4>{{user.fname}} {{user.lname}}</h4>
                                    {{!-- <p class="text-secondary mb-1">Full Stack Developer</p>
                                    <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p> --}}
                                    {{!-- <button class="btn btn-primary">Follow</button>
                                    <button class="btn btn-outline-primary">Message</button> --}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">

                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="/userpage" style="text-decoration:none ;" class="mb-0">My Account</a>

                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="/orders" style="text-decoration:none ;" class="mb-0">Orders</a>

                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="/Editprofie/{{user._id}}" style="text-decoration:none ;" class="mb-0">Edit
                                    profie</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="/changepassword" style="text-decoration:none ;" class="mb-0">Change
                                    Password</a>
                                <span class="text-secondary"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="/address" style="text-decoration:none ;" class="mb-0">Address</a>
                                <span class="text-secondary"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="/referalcode" style="text-decoration:none ;" class="mb-0">Referal Code</a>
                                <span class="text-secondary"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="/wallet" style="text-decoration:none ;" class="mb-0">Wallet</a>
                                <span class="text-secondary"></span>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{user.fname}} {{user.lname}}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{user.email}}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{user.phone}}
                                </div>
                            </div>
                            <hr>

                        </div>
                    </div>

                    <div class="row gutters-sm px-2">

                        {{#each address}}
                        {{#when this.check 'eq' "checked"}}
                        <div class="card " style="width:60rem;">
                            <div class="card-body">
                                <h5 class="card-title">Address</h5>

                                <p class="card-text">{{this.address}}</p>
                                <p class="card-text">{{this.city}}</p>
                                <p class="card-text">{{this.zip}}</p>
                                <p class="card-text">{{this.saveaddress}}</p>
                                <div class="row">
                                    <div class="col-12">
                                        <button type="button" class="btn bg-info btn-xxl mx-1 ml-1 col-2 "
                                            data-bs-toggle="modal" data-bs-target="#exampleModal">
                                            + Address</button>

                                        <span style="float: right;"> <a class="" href="/Edit-Address/{{this._id}}"><i
                                                    class="	fas fa-edit"></i></a>
                                            <a class="" href="/delete-Address/{{this._id}}" onclick="confirmation(event)"><i
                                                    class="fa fa-trash text-danger"></i></a>
                                        </span>
                                        {{!-- <a class="btn btn-info bg-info col-2 "
                                            href="/Edit-Address/{{this._id}}">Edit</a> --}}





                                    </div>




                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="card-title"> Address</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="col-lg-12">
                                                        <div class="card">
                                                            <div class="card-body">


                                                                <!-- Vertical Form -->
                                                                <form class="row g-3" id="Addressaccount"
                                                                    action="/add-addressuser" method="post">

                                                                    <div class="col-12">
                                                                        <label for="inputEmail4"
                                                                            class="form-label">Address </label>
                                                                        <input type="text" name="address"
                                                                            class="form-control" id="addressaccount">
                                                                        <span class="text-warning"
                                                                            id="erroraddressaccount"></span>
                                                                    </div>
                                                                    <div class="col-12">
                                                                        <label for="inputEmail4"
                                                                            class="form-label">City</label>
                                                                        <input type="text" name="city"
                                                                            class="form-control" id="cityaccount">
                                                                        <span class="text-warning"
                                                                            id="errorcityaccount"></span>
                                                                    </div>

                                                                    <div class="col-12">
                                                                        <label for="inputEmail4"
                                                                            class="form-label">zip</label>
                                                                        <input type="text" name="zip"
                                                                            class="form-control" id="zipaccount">
                                                                        <span class="text-warning"
                                                                            id="errorzipaccount"></span>
                                                                    </div>

                                                                    <div class="col-12">
                                                                        <span><input name="saveaddress" type="radio"
                                                                                value="Home" checked>
                                                                            Home</span>
                                                                        <span><input name="saveaddress" type="radio"
                                                                                value="Office"> Office</span>
                                                                        <span><input name="saveaddress" type="radio"
                                                                                value="Other"> Other</span>
                                                                        <span><input name="check" type="checkbox"
                                                                                value="checked"> Save As
                                                                            Default</span>
                                                                        <input name="userId" type="hidden"
                                                                            value="{{this.userId}}">
                                                                    </div>

                                                                    <div class="text-center">
                                                                        <button type="submit"
                                                                            class="btn btn-primary">Submit</button>

                                                                    </div>
                                                                </form><!-- Vertical Form -->

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/when}}
                        {{/each}}

                    </div>





                </div>
            </div>

        </div>
    </div>
</section>
<script>
    /*************validate Address ******/
    const form = document.getElementById('Addressaccount')




    form.addEventListener('submit', (e) => {

        const address = document.getElementById('addressaccount').value
        const city = document.getElementById('cityaccount').value
        const zip = document.getElementById('zipaccount').value
        //alert(address)
        
        if (address == '') {

            document.getElementById('erroraddressaccount').innerHTML = 'Address Required ..!';
            e.preventDefault()

        } else {
            document.getElementById('erroraddressaccount').innerHTML = '';
        }

        if (city == '') {

            document.getElementById('errorcityaccount').innerHTML = 'City Required ..!';
            e.preventDefault()

        } else {
            document.getElementById('errorcityaccount').innerHTML = '';
        }
        if (zip == '') {

            document.getElementById('errorzipaccount').innerHTML = 'Zip Required ..!';
            e.preventDefault()

        } else {
            document.getElementById('errorzipaccount').innerHTML = '';
        }



    })
/******* End ******/
</script>