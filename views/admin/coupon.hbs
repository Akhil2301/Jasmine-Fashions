<main id="main" class="main">
  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Coupon</h5>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
              Add Coupon
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <form action="/admin/addCoupon" method="post">
                    <div class="modal-body">
                      <label for="">Coupon Name</label>
                      <input type="text" name="coupon" class="form-control">
                      <label for="">Enter the percentage</label>
                      <input type="number" name="percentage" class="form-control">
                      <label for="">Enter offer Start date</label>
                      <input type="date" name="startoffer" class="form-control">
                      <label for="">Enter offer end date</label>
                      <input type="date" name="endoffer" class="form-control">
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                  </form>

                </div>
              </div>
            </div>



            <table class="table datatable">

              <thead>

                <tr>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">NAME</th>
                  <th scope="col">OFFER</th>
                  <th scope="col">date</th>
                  <th scope="col">End Date</th>
                  <th scope="col">Action</th>
                </tr>
                </tr>
              </thead>
              <tbody>

                {{#each coupon}}
                <tr>
                  <th scope="row">{{inc @index}}</th>
                  <td>{{this.coupon}}</td>
                  <td>{{this.percentage}}%</td>
                  <td>{{this.startoffer}}</td>
                  <td>{{this.endoffer}}</td>


                  <td><button type="button" class="btn btn-primary" data-bs-toggle="modal"
                      data-bs-target="#exampleModal{{this._id}}" data-bs-whatever="@mdo">Update </button>



                    <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1"
                      aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Update Coupon</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <form action="/admin/edit-coupon/{{this._id}}" method="post">
                              <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Coupon
                                  Name:</label>
                                <input type="text" class="form-control" name="coupon" id="{{this.coupon}}"
                                  value="{{this.coupon}}">
                                <span class="text-warning" id="brn{{inc @index}}"></span>

                                <label for="">Enter the percentage</label>
                                <input type="number" name="percentage" value="{{this.percentage}}" class="form-control">
                                <label for="">Enter offer Start date</label>
                                <input type="date" name="startoffer" value="{{this.startoffer}}" class="form-control">
                                <label for="">Enter offer end date</label>
                                <input type="date" name="endoffer" value="{{this.endoffer}}" class="form-control">





                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" id="submitbrand" class="btn btn-primary"
                                  onclick="return brandvalidate(event,'{{brand}}','brn{{inc @index}}')">Save</button>
                              </div>
                            </form>
                          </div>

                        </div>
                      </div>
                    </div>
                  </td>




                  <td><a class="btn btn-danger" href="/admin/delete-coupon/{{this._id}}">Remove</a></td>

                </tr>
                {{/each}}
              </tbody>
            </table>



          </div>
        </div>

      </div>
    </div>
  </section>

</main>