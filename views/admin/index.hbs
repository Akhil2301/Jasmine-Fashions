              <!-- Pie Chart -->
              <canvas id="pieChart" style="max-height: 400px;"></canvas>
              <script>
                document.addEventListener("DOMContentLoaded", () => {
                  new Chart(document.querySelector('#pieChart'), {
                    type: 'pie',
                    data: {
                      labels: [
                        'cod',
                        'razorpay',
                        'paypal'
                      ],
                      datasets: [{
                        label: 'My First Dataset',
                        data: [{{COD.paymentMethod}}, {{razorpay.paymentMethod}}, {{paypal.paymentMethod}}],
                        backgroundColor: [
                          'rgb(255, 99, 132)',
                          'rgb(54, 162, 235)',
                          'rgb(255, 205, 86)'
                        ],
                        hoverOffset: 4
                      }]
                    }
                  });
                });
              </script>
