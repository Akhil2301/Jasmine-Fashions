              <script>
                document.addEventListener("DOMContentLoaded", () => {
                  echarts.init(document.querySelector("#barChart")).setOption({
                    xAxis: {
                      type: 'category',
                      data: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun']
                    },
                    yAxis: {
                      type: 'value'
                    },
                    series: [{
                      
                      data: [{{orderperday.[0].TotalSum}}, {{orderperday.[1].TotalSum}}, {{orderperday.[2].TotalSum}}, {{orderperday.[3].TotalSum}}, {{orderperday.[4].TotalSum}}, {{orderperday.[5].TotalSum}}, {{orderperday.[6].TotalSum}}],
