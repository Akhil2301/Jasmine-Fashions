<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Offer Management</h5>


                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">offer status</th>
                                        <th scope="col">offer Amount</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each product}}
                                    <tr>
                                        <th scope="row">{{inc @index}}</th>
                                        <td>{{Name}}</td>
                                        <td>{{price}}</td>
                                        <td>{{description}}</td>
                                        {{status}}
                                        {{#if status}}
                                        <td>Offer</td>
                                        <td>{{offerper}}</td>
                                        {{else}}
                                        <td>Not Offer</td>
                                        <td>0</td>
                                        {{/if}}
                                       {{#if status}}
                                        <td>
                                            <a class="btn btn-danger" href="/admin/Offer-remove/{{this._id}}"
                                                onclick="removeoff(event)">Remove Offer
                                        </td>
                                        {{else}}
                                        <td>
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#exampleModal{{this._id}}" data-bs-whatever="@mdo">Add Offer
                                            </button>


                                            <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Offer</h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form  action="/admin/offer/{{this._id}}" method="post">
                                                                <div class="mb-3">
                                                                    <label for="recipient-name"
                                                                        class="col-form-label">offer
                                                                        Percentage:</label>
                                                                    <input type="text" class="form-control" name="offer"
                                                                        id="offer_per">
                                                                        <input type="hidden" class="form-control" name="price"
                                                                        id="price" value="{{price}}">
                                                                    <span class="text-warning" id="offer-error"></span>
                                                                </div>
                                                              

                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary"
                                                                        data-bs-dismiss="modal">Close</button>
                                                                    <button type="submit" 
                                                                        class="btn btn-primary" onclick="return Offervalidate(event)">Saves</button>
                                                                </div>
                                                            </form>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </td>

                                        {{/if}}
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->

                        </div>
                    </div>

                </div>
            </div>
    </section>

</main><!-- End #main -->
