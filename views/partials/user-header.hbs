<!-- navbar -->
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white py-4 fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex justify-content-between align-items-center order-lg-0" href="/">
                {{!-- <img src="" alt="site icon"> --}}
                <span class="text-uppercase fw-lighter ms-2">Jasmin Fashions</span>
            </a>

            <div class="order-lg-2 nav-btns">
                {{#if user}}
                <a type="button" class="btn position-relative" href="/cart">
                    <i class="fa fa-shopping-cart"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge bg-primary"
                        id="cart-count">{{cartCount}}</span>
                </a>
                {{/if}}
                {{#if user}}
                <div class="dropdown">
                    <button class="dropbtn"> <i class="fa fa-user"> &nbsp;{{user.fname}}</i></button>
                    <div class="dropdown-content">
                        <a href="/userpage">My Account</a>
                        <a href="/order-success">Orders</a>
                        <a href="/logout">Logout</a>
                    </div>
                </div>
                {{else}}
                <a href="/login" class="dropbtn"> <i class="fa fa-user"></i></a>
                {{/if}}
                {{!-- <button type="button" class="btn position-relative">
                    <i class="fa fa-search"></i>
                </button> --}}
            </div>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse order-lg-1" id="navMenu">
                <ul class="navbar-nav mx-auto text-center">
                    <li class="nav-item px-2 py-2">
                        <a class="nav-link text-uppercase text-dark" href="/">Home</a>
                    </li>
                    {{#each headers}}
                    <li class="nav-item px-2 py-2">
                        <a class="nav-link text-uppercase text-dark" href="/categorysort/{{this._id}}">{{this.category}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item px-2 py-2">
                        <a class="nav-link text-uppercase text-dark" href="/shop">Shop</a>
                    </li>
                    

                </ul>
            </div>
        </div>
    </nav>
</header>

